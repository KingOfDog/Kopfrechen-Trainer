<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<TilePane alignment="CENTER" minWidth="-Infinity" orientation="VERTICAL" prefHeight="506.0" prefWidth="791.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="main.FXMLDocumentController">
  <children>
    <Label id="labelTitle" alignment="BOTTOM_CENTER" contentDisplay="CENTER" prefWidth="600.0" text="Willkommen im Kopfrechen-Trainer!" textAlignment="CENTER">
      <font>
        <Font size="20.0" />
      </font>
    </Label>
    <Label id="labelSubheader" alignment="TOP_CENTER" contentDisplay="CENTER" prefWidth="600.0" text="von KingOfDog" textAlignment="CENTER">
      <font>
        <Font size="12.0" />
      </font>
      <TilePane.margin>
        <Insets top="-50.0" />
      </TilePane.margin>
    </Label>
    <Button id="submit" alignment="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#startGame" prefHeight="42.0" prefWidth="160.0" text="Los geht's" textAlignment="LEFT" TilePane.alignment="CENTER">
      <font>
        <Font name="System Bold" size="16.0" />
      </font>
      <tooltip>
        <Tooltip text="Beginn der Abfrage">
          <font>
            <Font size="16.0" fx:id="x1" />
          </font>
        </Tooltip>
      </tooltip>
      <TilePane.margin>
        <Insets top="10.0" />
      </TilePane.margin>
    </Button>
    <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" TilePane.alignment="CENTER">
      <children>
        <Button alignment="CENTER" mnemonicParsing="false" onAction="#statsShow" text="Statistiken" HBox.hgrow="ALWAYS">
          <tooltip>
            <Tooltip text="Sehe deine Statistiken ein" />
          </tooltip>
          <HBox.margin>
            <Insets right="50.0" />
          </HBox.margin>
        </Button>
        <Button mnemonicParsing="false" onAction="#goToSettings" text="Einstellungen">
          <tooltip>
            <Tooltip text="Sehe deine Statistiken ein" />
          </tooltip>
          <HBox.margin>
            <Insets left="50.0" />
          </HBox.margin>
        </Button>
      </children>
    </HBox>
  </children>
</TilePane>
